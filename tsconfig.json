{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "rootDir": "./",
    "paths": {
      "*": ["node_modules", "packages"],
    }
  },
  "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "babelCore": "@babel/core"
  },
  "include": ["packages" ],
  "exclude": ["node_modules"]
}